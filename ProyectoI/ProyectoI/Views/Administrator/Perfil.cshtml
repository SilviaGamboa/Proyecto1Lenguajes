@{
    ViewData["Title"] = "Perfil de Usuario";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>

    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card shadow-lg">
                    <div class="card-header bg-primary text-white text-center">
                        <div class="d-flex justify-content-between align-items-center">
                            <h2>Perfil Usuario</h2>

                            <button id="btnVolver" onclick="volver()" class="btn btn-primary">Volver</button>
                        </div>
                    </div>
                    <div class="card-body">
                        @if (ViewBag.Message != null)
                        {
                            <div class="alert alert-success text-center">@ViewBag.Message</div>
                        }

                        <form id="profileForm">
                            <input type="hidden" id="id" />

                            <div class="mb-3">
                                <label for="nombre" class="form-label">Nombre</label>
                                <input type="text" id="nombre" class="form-control" required placeholder="Ingresa tu nombre" />
                            </div>

                            <div class="mb-3">
                                <label for="correo" class="form-label">Correo</label>
                                <input type="email" id="correo" class="form-control" required placeholder="Ingresa tu correo" />
                            </div>

                            <button type="submit" class="btn btn-primary w-100">Guardar Cambios</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            let user = JSON.parse(sessionStorage.getItem("user"));

            //si no te logueate te devuelve
            if (!user) {
                alert("No has iniciado sesión.");
                window.location.href = "/Account/Login";
                return;
            }

            // Rellenar el formulario con los datos del usuario
            document.getElementById("id").value = user.id;
            document.getElementById("nombre").value = user.nombre;
            document.getElementById("correo").value = user.correo;

            document.getElementById("profileForm").addEventListener("submit", function (event) {
                event.preventDefault();

                let updatedUser = {
                    id: document.getElementById("id").value,
                    nombre: document.getElementById("nombre").value,
                    correo: document.getElementById("correo").value
                };

                fetch("/Administrator/UpdateProfile", {
                    method: "POST",
                    headers: { "Content-Type": "application/json" },
                    body: JSON.stringify(updatedUser)
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        alert("Perfil actualizado exitosamente.");
                        sessionStorage.setItem("user", JSON.stringify(updatedUser));
                    } else {
                        alert("Error al actualizar perfil.");
                    }
                })
                .catch(error => console.error("Error:", error));
            });
        });
    </script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>

